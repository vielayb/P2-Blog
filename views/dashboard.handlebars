<div class="container">
<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-url">Link</label>
      <input id="post-url" name="post-url" />
    </div>
  <!-- Button for uploading pictures -->
        <script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <button id="upload_widget" class="cloudinary-button" type="submit" class="btn">Upload File</button>
  </form>
</section>
</div>

{{#if posts.length}}
<div class="container">
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <img id="upLoad" style="width: 500px">
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
</div>
{{/if}}

<script src="/javascript/add-post.js"></script>